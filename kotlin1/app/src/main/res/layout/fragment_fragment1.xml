<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.mse.codechallenge.Fragment1">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_toRightOf="@+id/userPhoto"
                  android:layout_marginLeft="16dp"
                  android:orientation="vertical">
        <ImageView android:id="@+id/userPhoto"
                   android:layout_width="254dp"
                   android:layout_height="297dp"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentTop="true"
                   android:scaleType="centerCrop"
                   android:src="@mipmap/ic_launcher"
                   android:layout_gravity="bottom|center" android:layout_marginTop="20dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/userPhoto"
                      android:layout_marginLeft="16dp"
                      android:orientation="horizontal" android:paddingTop="5dp" android:layout_marginTop="50dp">
            <ImageButton
                    android:src="@android:drawable/stat_sys_phone_call_forward"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/phoneButton" android:layout_weight="0"/>
            <TextView
                    android:id="@+id/phone"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="5dp"
                    android:text="phone"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/userPhoto"
                      android:layout_marginLeft="16dp"
                      android:orientation="horizontal" android:paddingTop="5dp">
            <ImageButton
                    android:src="@android:drawable/sym_action_email"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/emailButton" android:layout_weight="0"/>
            <TextView
                    android:id="@+id/email"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="5dp"
                    android:text="email"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
